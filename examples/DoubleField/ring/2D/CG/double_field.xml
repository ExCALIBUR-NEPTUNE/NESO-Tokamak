<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>

    <COLLECTIONS DEFAULT="MatrixFree" />

    <!--
        The composite index for the domain is expected to be 0 if the mesh was generated from the included .geo file
     -->
    <EXPANSIONS>
       <E COMPOSITE="C[0]" NUMMODES="4" TYPE="MODIFIED" FIELDS="n,e" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                       VALUE="DoubleDiffusiveField"/>
            <I PROPERTY="Projection"                   VALUE="Continuous" />
            <I PROPERTY="GlobalSysSoln"                VALUE="XxtMultiLevelStaticCond"/>
            <I PROPERTY="LinSysIterSolverTypeInNonlin" VALUE="GMRES"         />
            <I PROPERTY="DiffusionAdvancement"         VALUE="Implicit"/>
        </SOLVERINFO>

        <TIMEINTEGRATIONSCHEME>
            <METHOD> IMEX </METHOD>
            <ORDER> 2 </ORDER>
        </TIMEINTEGRATIONSCHEME>

        <GLOBALSYSSOLNINFO>
            <V VAR="u">
                <I PROPERTY="GlobalSysSoln"             VALUE="XxtMultiLevelStaticCond"/>
                <I PROPERTY="LinSysIterSolver"          VALUE="GMRES"/>
                <I PROPERTY="Preconditioner"            VALUE="Diagonal"        />
                <I PROPERTY="MaxIterations"             VALUE="1000"/>
                <I PROPERTY="GMRESMaxStorage"           VALUE=200       />
                <I PROPERTY="IterativeSolverTolerance"  VALUE="1e-12"/>
            </V>
        </GLOBALSYSSOLNINFO>

        <PARAMETERS>
            <!-- Conversion of mesh unit to m -->
            <P> mesh_length = 1 </P> 
            <!-- Normalised temperature in eV -->
            <P> Tnorm = 1 </P>
            <!-- Normalised density in m^-3 -->
            <P> Nnorm = 1e18 </P>
            <!-- Normalised magnetic field in T -->
            <P> Bnorm = 1.0 </P>
            <!-- Time step in gyro times -->
            <P> TimeStep = 10 </P>
            <P> NumSteps = 100 </P>
            <P> TFinal        = NumSteps*TimeStep </P>
            <P> IO_CheckSteps  = 10                </P>
            <P> IO_InfoSteps   = 10                </P>

            <P> particle_output_freq = 1          </P>

            <!-- Coulomb logarithm -->
            <P> lambda    = 13          </P>
            <P> k_ce       = 3.16        </P>
            <P> k_ci       = 3.9        </P>
            <!-- Background temperature in Tnorm eV -->
            <P> T_bg      = 10         </P>

            <!-- Scaling factor for ICs -->
            <P> rc = 2 </P>
            <P> yc = 0 </P>                     
            <P> rs = 0.75 </P>
            <P> ys = 0 </P>
            <P> sr = 0.1 </P>
            <P> sy = 0.1 </P>
            
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-6  </P>
            <P> NekNonlinSysMaxIterations = 30       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> n  </V>
            <V ID="1"> e  </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="1"> C[1] </B> <!-- Inner -->
            <B ID="2"> C[2] </B> <!-- Outer -->
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <REGION REF="1">
                <N VAR="n"  VALUE="0.0" />
                <N VAR="e"  VALUE="0.0" />
            </REGION>
            <REGION REF="2">
                <N VAR="n"  VALUE="0.0" />
                <N VAR="e"  VALUE="0.0" />
            </REGION>
        </BOUNDARYCONDITIONS>

        <FUNCTION NAME="InitialConditions">
            <E VAR="n"  DOMAIN="0" VALUE="2.0" />
            <E VAR="e"  DOMAIN="0" VALUE="4.0+0.3*exp((-(x-rc-rs)*(x-rc-rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))+0.3*exp((-(x-rc+rs)*(x-rc+rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
        </FUNCTION>
        <FUNCTION NAME="MagneticField">
            <E VAR="Bx" VALUE="(y-yc)/sqrt((x-rc)*(x-rc)+(y-yc)*(y-yc))" />
            <E VAR="By" VALUE="-(x-rc)/sqrt((x-rc)*(x-rc)+(y-yc)*(y-yc))" />
            <E VAR="Bz" VALUE="0" />
        </FUNCTION>
    </CONDITIONS>

    <NESO>
        <SPECIES>
            <S ID="0" NAME="D">
                <P> Mass = 2.0 </P>
                <P> Charge = 1.0 </P>
                <FUNCTION NAME="InitialConditions">
                    <E VAR="n"  DOMAIN="0" VALUE="1+0.1*exp((-(x-rc-rs)*(x-rc-rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                    <E VAR="e"  DOMAIN="0" VALUE="2+0.3*exp((-(x-rc-rs)*(x-rc-rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                </FUNCTION>
            </S>
            <S ID="1" NAME="T">
                <P> Mass = 3.0 </P>
                <P> Charge = 1.0 </P>
                <FUNCTION NAME="InitialConditions">
                    <E VAR="n"  DOMAIN="0" VALUE="1+0.1*exp((-(x-rc+rs)*(x-rc+rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                    <E VAR="e"  DOMAIN="0" VALUE="2+0.3*exp((-(x-rc+rs)*(x-rc+rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                </FUNCTION>
            </S>
        </SPECIES> 
    </NESO>
</NEKTAR>
