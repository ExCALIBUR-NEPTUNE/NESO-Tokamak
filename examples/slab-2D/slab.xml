<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>

    <COLLECTIONS DEFAULT="MatrixFree" />

    <!--
        The composite index for the domain is expected to be 0 if the mesh was generated from the included .geo file
     -->
    <EXPANSIONS>
       <E COMPOSITE="C[0]" NUMMODES="4" TYPE="MODIFIED" FIELDS="phi,w,Te,ne,Ti,ni" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                       VALUE="Tokamak"               />
            <I PROPERTY="AdvectionType"                VALUE="WeakDG"                />
            <I PROPERTY="Projection"                   VALUE="DisContinuous"         />
            <I PROPERTY="TimeIntegrationMethod"        VALUE="DIRKOrder2"            />
            <I PROPERTY="AdvectionAdvancement"         VALUE="Implicit"              />
            <I PROPERTY="LinSysIterSolverTypeInNonlin" VALUE="GMRES"                 />
            <I PROPERTY="UpwindType"                   VALUE="Upwind"                />
            <I PROPERTY="DiffusionAdvancement"         VALUE="Implicit"              />
            <I PROPERTY="Mode"                         VALUE="ElectrostaticTurbulent"/>
        </SOLVERINFO>

        <PARAMETERS>
            <!-- Timestepping and output options -->
            <P> TimeStep      = 0.05                 </P>
            <P> NumSteps      = 6000                 </P>
            <P> TFinal        = NumSteps*TimeStep    </P>
            <P> IO_InfoSteps  = 5                   </P>
            <P> IO_CheckSteps = 5                   </P>
            <P> particle_output_freq = IO_CheckSteps </P>

            <P> lambda         = 13.0              </P>

            <P> epsilon         = 1.0   </P>
            <!-- Anisotropic diffusion -->
            <P> k_par           = 1e6   </P>
            <P> k_perp          = 1e0   </P>
            <P> TCore           = 300.0 </P>

            <!-- HW params -->
            <P> HW_alpha = 2.0 </P>
            <P> HW_kappa = 1.0 </P> 
            <!-- Scaling factor for ICs -->
            <P> ics_scale        = 2.0 </P>
            <!-- No particles when num_particles_total = 0-->
            <P> num_particles_total = 0 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 1.0 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 1.0 </P>
            <!-- Scaling coefficient when adding particle drift velocities. -->
            <P> particle_v_drift_scaling = 1.0 </P>
            <!-- Scaling coefficient applied to B for particles, -->
            <!-- i.e. if 0 particles ignore B. -->
            <P> particle_B_scaling = 1.0 </P>
            <!-- Add to initial particle velocity a contribution: -->
            <!-- particle_velocity_B_scaling * unit(B) -->
            <P> particle_velocity_B_scaling = 0.0 </P>
            <!-- Add to initial particle velocity a contribution: -->
            <!-- using particle_thermal_velocity. -->
            <!-- Purtubation is sampled from N(0, particle_thermal_velocity) -->
            <P> particle_thermal_velocity = 0.0 </P>
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-10  </P>
            <P> NekNonlinSysMaxIterations = 30       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> phi  </V>
            <V ID="1"> w  </V>
            <V ID="2"> Te   </V>
            <V ID="3"> ne </V>
            <V ID="4"> Ti   </V>
            <V ID="5"> ni </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B> <!-- Low y -->
            <B ID="1"> C[2] </B> <!-- High x -->
            <B ID="2"> C[3] </B> <!-- High y -->
            <B ID="3"> C[4] </B> <!-- Low x -->
        </BOUNDARYREGIONS>

        <!-- Periodic conditions for all fields on all boundaries -->
        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <P VAR="phi" VALUE="[2]" />
                <P VAR="w"   VALUE="[2]" />
                <P VAR="Te"  VALUE="[2]" />
                <P VAR="ne"  VALUE="[2]" />
                <P VAR="Ti"  VALUE="[2]" />
                <P VAR="ni"  VALUE="[2]" />
            </REGION>
            <REGION REF="1">
                <P VAR="phi" VALUE="[3]" />
                <P VAR="w"   VALUE="[3]" />
                <P VAR="Te"  VALUE="[3]" />
                <P VAR="ne"  VALUE="[3]" />
                <P VAR="Ti"  VALUE="[3]" />
                <P VAR="ni"  VALUE="[3]" />
            </REGION>
	        <REGION REF="2">
                <P VAR="phi" VALUE="[0]" />
                <P VAR="w"   VALUE="[0]" />
                <P VAR="Te"  VALUE="[0]" />
                <P VAR="ne"  VALUE="[0]" />
                <P VAR="Ti"  VALUE="[0]" />
                <P VAR="ni"  VALUE="[0]" />
            </REGION>
            <REGION REF="3">
                <P VAR="phi" VALUE="[1]" />
                <P VAR="w"   VALUE="[1]" />
                <P VAR="Te"  VALUE="[1]" />
                <P VAR="ne"  VALUE="[1]" />
                <P VAR="Ti"  VALUE="[1]" />
                <P VAR="ni"  VALUE="[1]" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <FUNCTION NAME="InitialConditions">
            <E VAR="phi" DOMAIN="0" VALUE="exp(-(x*x+y*y)/(ics_scale*ics_scale))" />
            <E VAR="w"   DOMAIN="0" VALUE="(4*exp((-x*x-y*y)/(ics_scale*ics_scale))*(-ics_scale*ics_scale+x*x+y*y)/ics_scale^4)" />
            <E VAR="Te"  DOMAIN="0" VALUE="6*exp((-x*x-y*y)/(ics_scale*ics_scale))" />
            <E VAR="ne"  DOMAIN="0" VALUE="6*exp((-x*x-y*y)/(ics_scale*ics_scale))" />
            <E VAR="Ti"  DOMAIN="0" VALUE="6*exp((-x*x-y*y)/(ics_scale*ics_scale))" />
            <E VAR="ni"  DOMAIN="0" VALUE="6*exp((-x*x-y*y)/(ics_scale*ics_scale))" />
        </FUNCTION>
        <FUNCTION NAME="MagneticField">
            <E VAR="Bx"  DOMAIN="0" VALUE="0"  />
            <E VAR="By"  DOMAIN="0" VALUE="0"  />
            <E VAR="Bz"  DOMAIN="0" VALUE="10"  />
        </FUNCTION>
    </CONDITIONS>
</NEKTAR>
