<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>

    <COLLECTIONS DEFAULT="MatrixFree" />

    <!--
        The composite index for the domain is expected to be 0 if the mesh was generated from the included .geo file
     -->
    <EXPANSIONS>
       <E COMPOSITE="C[0]" NUMMODES="4" TYPE="MODIFIED" FIELDS="ne,w,phi,gradphi0,gradphi1,gradphi2" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                       VALUE="HWIT"          />
            <I PROPERTY="AdvectionType"                VALUE="WeakDG"        />
            <I PROPERTY="Projection"                   VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod"        VALUE="DIRKOrder2"    />
            <I PROPERTY="AdvectionAdvancement"         VALUE="Implicit"      />
            <I PROPERTY="LinSysIterSolverTypeInNonlin" VALUE="GMRES"         />
            <I PROPERTY="UpwindType"                   VALUE="Upwind"        />
        </SOLVERINFO>

        <PARAMETERS>
            <!-- Timestepping and output options -->
            <P> TimeStep      = 0.05                              </P>
            <P> NumSteps      = 3000                              </P>
            <P> TFinal        = NumSteps*TimeStep                 </P>
            <P> IO_InfoSteps  = NumSteps/100                      </P>
            <P> IO_CheckSteps = NumSteps/100                      </P>
            <P> particle_num_write_particle_steps = IO_CheckSteps </P>
            <!-- Magnetic field strength -->
            <P> Bx       = 0.0 </P>
            <P> By       = 0.0 </P>
            <P> Bz       = 1.0 </P>
            <!-- d22 Coeff for Helmholtz solve -->
            <P> d22      = 0.0 </P> 
            <!-- HW params -->
            <P> HW_alpha = 2.0 </P>
            <P> HW_kappa = 1.0 </P> 
            <!-- Scaling factor for ICs -->
            <P> s        = 2.0 </P>
            <!-- No particles when num_particles_total = 0-->
            <P> num_particles_total = 10000 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 1.0 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 1.0 </P>
            <!-- Scaling coefficient when adding particle drift velocities. -->
            <P> particle_v_drift_scaling = 1.0 </P>
            <!-- Scaling coefficient applied to B for particles, i.e. if 0 particles ignore B. -->
            <P> particle_B_scaling = 1.0 </P>
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-14  </P>
            <P> NekNonlinSysMaxIterations = 30       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> ne  </V>
            <V ID="1"> w   </V>
            <V ID="2"> phi </V>
            <V ID="3"> gradphi0 </V>
            <V ID="4"> gradphi1 </V>
            <V ID="5"> gradphi2 </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B> <!-- Low y -->
            <B ID="1"> C[2] </B> <!-- High x -->
            <B ID="2"> C[3] </B> <!-- High y -->
            <B ID="3"> C[4] </B> <!-- Low x -->
        </BOUNDARYREGIONS>

        <!-- Periodic conditions for all fields on all boundaries -->
        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <P VAR="ne"  VALUE="[2]" />
                <P VAR="w"   VALUE="[2]" />
                <P VAR="phi" VALUE="[2]" />
                <P VAR="gradphi0" VALUE="[2]" />
                <P VAR="gradphi1" VALUE="[2]" />
                <P VAR="gradphi2" VALUE="[2]" />
            </REGION>
            <REGION REF="1">
                <P VAR="ne"  VALUE="[3]" />
                <P VAR="w"   VALUE="[3]" />
                <P VAR="phi" VALUE="[3]" />
                <P VAR="gradphi0" VALUE="[3]" />
                <P VAR="gradphi1" VALUE="[3]" />
                <P VAR="gradphi2" VALUE="[3]" />
            </REGION>
	        <REGION REF="2">
                <P VAR="ne"  VALUE="[0]" />
                <P VAR="w"   VALUE="[0]" />
                <P VAR="phi" VALUE="[0]" />
                <P VAR="gradphi0" VALUE="[0]" />
                <P VAR="gradphi1" VALUE="[0]" />
                <P VAR="gradphi2" VALUE="[0]" />
            </REGION>
            <REGION REF="3">
                <P VAR="ne"  VALUE="[1]" />
                <P VAR="w"   VALUE="[1]" />
                <P VAR="phi" VALUE="[1]" />
                <P VAR="gradphi0" VALUE="[1]" />
                <P VAR="gradphi1" VALUE="[1]" />
                <P VAR="gradphi2" VALUE="[1]" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <FUNCTION NAME="InitialConditions">
            <E VAR="ne"  DOMAIN="0" VALUE="6*exp((-x*x-y*y)/(s*s))" />
            <E VAR="w"   DOMAIN="0" VALUE="(4*exp((-x*x-y*y)/(s*s))*(-s*s+x*x+y*y)/s^4)" />
            <E VAR="phi" DOMAIN="0" VALUE="exp(-(x*x+y*y)/(s*s))" />
            <E VAR="gradphi0" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi1" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi2" DOMAIN="0" VALUE="0" />
        </FUNCTION>
    </CONDITIONS>
</NEKTAR>
