<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="auto" />
    <EXPANSIONS>
        <E COMPOSITE="C[3]" NUMMODES="4" TYPE="MODIFIED" FIELDS="T,ne,w,phi,gradphi0,gradphi1,gradphi2" />
        <E COMPOSITE="C[4]" NUMMODES="4" TYPE="MODIFIED" FIELDS="T,ne,w,phi,gradphi0,gradphi1,gradphi2" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>      
            <I PROPERTY="EQTYPE"                        VALUE="Tokamak" />
            <I PROPERTY="AdvectionType"                 VALUE="WeakDG"/>
            <I PROPERTY="Projection"                    VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod"         VALUE="DIRKOrder2" />
            <I PROPERTY="AdvectionAdvancement"          VALUE="Implicit"/>
            <I PROPERTY="LinSysIterSolverTypeInNonlin"  VALUE="GMRES"/>
            <I PROPERTY="UpwindType"                    VALUE="Upwind"/>
            <I PROPERTY="DiffusionAdvancement"          VALUE="Implicit"/>
        </SOLVERINFO>

        <PARAMETERS>
            <P> TimeStep       = 0.5           </P>
            <P> NumSteps       = 1000</P>
            <P> IO_CheckSteps  = 5                 </P>
            <P> IO_InfoSteps   = 5                 </P>
            <P> epsilon         = 1.0   </P>
            <!-- Anisotropic diffusion -->
            <P> m_e            = 9.1096e-31        </P>
            <P> m_p            = 1.6726e-27        </P>
            <P> A              = 1.0               </P>
            <P> Z              = 1.0               </P>
            <P> m_i            = A*m_p             </P>
            <P> T_e            = 116050            </P>
            <P> T_i            = T_e               </P>
            <P> epsilon_0      = 8.8542e-12        </P>
            <P> e              = 1.6022e-19        </P>
            <P> k_B            = 1.3807e-23        </P>
            <P> lambda         = 13.0              </P>
            <P> theta          = 2.0               </P>
            <P> n              = 1e18              </P>
            <P> B              = 1.0               </P>
            <!-- <P> k_par          = 19.2 * sqrt(2.0 * PI^3.0) * (1.0/sqrt(m_e)) * (epsilon_0^2.0 / e^4.0) * (((k_B * T_e)^(5.0/2.0))/((Z^2.0) * lambda)) </P> -->
            <!-- <P> k_perp         = 1.0/(6.0*sqrt(PI^3.0))*1.0/m_i*(n*Z*e/(B*epsilon_0))^2.0*((m_p*A)^1.5*lambda)/sqrt(k_B*T_i) </P> -->
            <P> a              = 200.0             </P>

            <P> k_par           = 1e4   </P>
            <P> k_perp          = 1e0   </P>
            <P> TCore           = 300.0 </P>
            <!-- Scaling factor for ICs -->
            <P> s        = 0.5 </P>
            <P> ics_scale        = 0.25 </P>
            <P> xc         = 0.8      </P>
            <P> yc         = 0.0      </P>
            <P> xs         = 0.5      </P>
            <P> ys         = 0        </P>
            <!-- d22 Coeff for Helmholtz solve -->
            <P> phi_d22      = 0.0 </P>
            <!-- HW params -->
            <P> HW_alpha        = 2   </P>
            <P> HW_kappa        = 1   </P>
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-14  </P>
            <P> NekNonlinSysMaxIterations = 5       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
            <!-- Particle system params -->
            <!-- Total number of particles - set = 0 to turn particles off -->
            <P> num_particles_total = 0 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 0.5 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 0.2 </P>
            <P> particle_output_freq = 1              </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> T </V>
            <V ID="1"> ne  </V>
            <V ID="2"> w   </V>
            <V ID="3"> phi </V>
            <V ID="4"> gradphi0 </V>
            <V ID="5"> gradphi1 </V>
            <V ID="6"> gradphi2 </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <!-- <B ID="0"> C[1] </B> -->
            <B ID="1"> C[2] </B>
            <!-- <B ID="2"> C[3] </B>
            <B ID="3"> C[4] </B>
            <B ID="4"> C[5] </B>
            <B ID="5"> C[6] </B>
            <B ID="6"> C[7] </B>
            <B ID="7"> C[8] </B>
            <B ID="8"> C[9] </B> -->
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <!--Core -->
            <!-- <REGION REF="0"> 
                <D VAR="T"     VALUE="0" />
                <D VAR="ne"  VALUE="0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION> -->
            <!--Wall -->
            <REGION REF="1">
                <!-- <R VAR="T" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <!-- <R VAR="ne" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <!-- <R VAR="w" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <D VAR="T" VALUE="0.0"/>
                <D VAR="ne" VALUE="0.0"/>
                <D VAR="w" VALUE="0.0"/>
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            
        </BOUNDARYCONDITIONS>
        
        <FUNCTION NAME="InitialConditions">
            <E VAR="T"  DOMAIN="0" VALUE="0" />
            <E VAR="ne"  DOMAIN="0" VALUE="0.06*exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))" />
            <E VAR="w"   DOMAIN="0" VALUE="(0.04*exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))*(-ics_scale*ics_scale+(x-xc-xs)*(x-xc-xs)+(y-yc-ys)*(y-yc-ys))/ics_scale^4)" />
            <E VAR="phi" DOMAIN="0" VALUE="0.01*exp(-((x-xc-xs)*(x-xc-xs)+(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))" />
            <E VAR="gradphi0" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi1" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi2" DOMAIN="0" VALUE="0" />
            <E VAR="T"  DOMAIN="1" VALUE="0" />
            <E VAR="ne"  DOMAIN="1" VALUE="0.06*exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))" />
            <E VAR="w"   DOMAIN="1" VALUE="(0.04*exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))*(-ics_scale*ics_scale+(x-xc-xs)*(x-xc-xs)+(y-yc-ys)*(y-yc-ys))/ics_scale^4)" />
            <E VAR="phi" DOMAIN="1" VALUE="0.01*exp(-((x-xc-xs)*(x-xc-xs)+(y-yc-ys)*(y-yc-ys))/(ics_scale*ics_scale))" />
            <E VAR="gradphi0" DOMAIN="1" VALUE="0" />
            <E VAR="gradphi1" DOMAIN="1" VALUE="0" />
            <E VAR="gradphi2" DOMAIN="1" VALUE="0" />
        </FUNCTION>
        
        <FUNCTION NAME="MagneticMeanField">
            <F VAR="Bx,By,Bz"  FILE="B.pts"  />
        </FUNCTION>

    </CONDITIONS>
</NEKTAR>
