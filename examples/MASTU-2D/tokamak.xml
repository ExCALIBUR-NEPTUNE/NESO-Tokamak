<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="auto" />
    <EXPANSIONS>
        <E COMPOSITE="C[10]" NUMMODES="2" TYPE="MODIFIED" FIELDS="T,ne,w,phi,gradphi0,gradphi1,gradphi2" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>      
            <I PROPERTY="EQTYPE"                        VALUE="Tokamak" />
            <I PROPERTY="AdvectionType"                 VALUE="WeakDG"/>
            <I PROPERTY="Projection"                    VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod"         VALUE="DIRKOrder2" />
            <I PROPERTY="AdvectionAdvancement"          VALUE="Implicit"/>
            <I PROPERTY="LinSysIterSolverTypeInNonlin"  VALUE="GMRES"/>
            <I PROPERTY="UpwindType"                    VALUE="Upwind"/>
            <I PROPERTY="DiffusionAdvancement"          VALUE="Implicit"/>
        </SOLVERINFO>

        <PARAMETERS>
            <P> NumSteps        = 200   </P>
            <P> TimeStep        = 0.05   </P>
            <P> TFinal = NumSteps*TimeStep </P>
            <P> IO_InfoSteps    = 10    </P>
            <P> IO_CheckSteps   = 10    </P>
            <P> epsilon         = 1.0   </P>
            <!-- Anisotropic diffusion -->
            <P> k_par           = 1e4   </P>
            <P> k_perp          = 1e0   </P>
            <P> TCore           = 300.0 </P>
            <!-- Scaling factor for ICs -->
            <P> s        = 0.5 </P>
            <!-- d22 Coeff for Helmholtz solve -->
            <P> phi_d22      = 0.0 </P>
            <!-- HW params -->
            <P> HW_alpha        = 0.1   </P>
            <P> HW_kappa        = 3.5   </P>
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-6  </P>
            <P> NekNonlinSysMaxIterations = 30       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
            <!-- Particle system params -->
            <!-- Total number of particles - set = 0 to turn particles off -->
            <P> num_particles_total = 0 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 0.5 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 0.2 </P>
            <P> particle_output_freq = 1              </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> T </V>
            <V ID="1"> ne  </V>
            <V ID="2"> w   </V>
            <V ID="3"> phi </V>
            <V ID="4"> gradphi0 </V>
            <V ID="5"> gradphi1 </V>
            <V ID="6"> gradphi2 </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B>
            <B ID="1"> C[2] </B>
            <B ID="2"> C[3] </B>
            <B ID="3"> C[4] </B>
            <B ID="4"> C[5] </B>
            <B ID="5"> C[6] </B>
            <B ID="6"> C[7] </B>
            <B ID="7"> C[8] </B>
            <B ID="8"> C[9] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <!--Core -->
            <REGION REF="0"> 
                <D VAR="T"     VALUE="TCore" />
                <D VAR="ne"  VALUE="0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Lower outer -->
            <REGION REF="1">
                <!-- <R VAR="T" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/>
                <R VAR="ne" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <D VAR="T" VALUE="0.0"/>
                <D VAR="ne" VALUE="0.0"/>
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Upper outer -->
            <REGION REF="2">
                <!-- <R VAR="T" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/>
                <R VAR="ne" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <D VAR="T" VALUE="0.0"/>
                <D VAR="ne" VALUE="0.0"/>
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Upper inner -->
            <REGION REF="3">
                <!-- <R VAR="T" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/>
                <R VAR="ne" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <D VAR="T" VALUE="0.0"/>
                <D VAR="ne" VALUE="0.0"/>
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Lower inner -->
            <REGION REF="4">
                <!-- <R VAR="T" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/>
                <R VAR="ne" USERDEFINEDTYPE="Oblique" VALUE="0.0" PRIMCOEFF="0.0"/> -->
                <D VAR="T" VALUE="0.0"/>
                <D VAR="ne" VALUE="0.0"/>
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--LFS SOL -->
            <REGION REF="5">
                <D VAR="T"    VALUE="0.0" />
                <D VAR="ne"    VALUE="0.0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--HFS SOL -->
            <REGION REF="6">
                <D VAR="T"    VALUE="0.0" />
                <D VAR="ne"    VALUE="0.0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Bottom PFR -->
            <REGION REF="7">
                <D VAR="T"    VALUE="0.0" />
                <D VAR="ne"    VALUE="0.0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
            <!--Top PFR -->
            <REGION REF="8">
                <D VAR="T"    VALUE="0.0" />
                <D VAR="ne"    VALUE="0.0" />
                <D VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
                <D VAR="gradphi0" VALUE="0" />
                <D VAR="gradphi1" VALUE="0" />
                <D VAR="gradphi2" VALUE="0" />
            </REGION>
        </BOUNDARYCONDITIONS>
        
        <FUNCTION NAME="InitialConditions">
            <E VAR="T"  DOMAIN="0" VALUE="1" />
            <E VAR="ne"  DOMAIN="0" VALUE="1" />
            <E VAR="w"   DOMAIN="0" VALUE="1" />
            <E VAR="phi" DOMAIN="0" VALUE="1" />
            <E VAR="gradphi0" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi1" DOMAIN="0" VALUE="0" />
            <E VAR="gradphi2" DOMAIN="0" VALUE="0" />
        </FUNCTION>
        
        <FUNCTION NAME="MagneticMeanField">
            <F VAR="Bx,By,Bz"  FILE="B.pts"  />
        </FUNCTION>

    </CONDITIONS>
</NEKTAR>
