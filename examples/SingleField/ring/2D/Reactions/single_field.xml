<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>

    <COLLECTIONS DEFAULT="MatrixFree" />

    <!--
        The composite index for the domain is expected to be 0 if the mesh was generated from the included .geo file
     -->
    <EXPANSIONS>
       <E COMPOSITE="C[0]" NUMMODES="4" TYPE="MODIFIED" FIELDS="n" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                       VALUE="SingleDiffusiveField"/>
            <I PROPERTY="Projection"                   VALUE="Continuous" />
            <I PROPERTY="TimeIntegrationMethod"        VALUE="IMEXOrder2"    />
            <!-- <I PROPERTY="LinSysIterSolverTypeInNonlin" VALUE="GMRES"         /> -->
            <!-- <I PROPERTY="UpwindType"                   VALUE="Upwind"        /> -->
            <I PROPERTY="DiffusionAdvancement"          VALUE="Implicit"/>
        </SOLVERINFO>

        <PARAMETERS>
            <!-- Timestepping and output options -->
            <P> TimeStep      = 0.0005            </P>
            <P> NumSteps      = 50              </P>
            <P> TFinal        = NumSteps*TimeStep </P>
            <P> IO_InfoSteps  = 10     </P>
            <P> IO_CheckSteps = 10     </P>
            <P> particle_output_freq = 1          </P>

            <P> epsilon         = 1.0   </P>
            <!-- Anisotropic diffusion -->
            <P> k_par           = 1   </P>
            <P> k_perp          = 1e-6   </P>
            <P> TCore           = 300.0 </P>
            <P> T_bnd            = 1.0 </P>
            <P> k_B             = 1.0 </P>
            <P> m_i             = 1.0 </P>

            <!-- Scaling factor for ICs -->
            <P> rc = 2 </P>
            <P> yc = 0 </P>                     
            <P> rs = 0.75 </P>
            <P> ys = 0 </P>
            <P> sr = 0.1 </P>
            <P> sy = 0.1 </P>
            
            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-6  </P>
            <P> NekNonlinSysMaxIterations = 30       </P>
            <P> NewtonRelativeIteTol      = 1.0E-10  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-10  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>

            <P> num_particles_total = 1 </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> n  </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="1"> C[1] </B> <!-- Inner -->
            <B ID="2"> C[2] </B> <!-- Outer -->
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="1">
                <N VAR="n"  VALUE="0.0" />
            </REGION>
            <REGION REF="2">
                <N VAR="n"  VALUE="0.0" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <FUNCTION NAME="InitialConditions">
            <E VAR="n"  DOMAIN="0" VALUE="0.1+0.1*exp((-(x-rc-rs)*(x-rc-rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
        </FUNCTION>
        <FUNCTION NAME="MagneticField">
            <E VAR="Bx" VALUE="(y-yc)/sqrt((x-rc)*(x-rc)+(y-yc)*(y-yc))" />
            <E VAR="By" VALUE="-(x-rc)/sqrt((x-rc)*(x-rc)+(y-yc)*(y-yc))" />
            <E VAR="Bz" VALUE="0" />
        </FUNCTION>
    </CONDITIONS>

    <PARTICLES>
        <INFO>
            <I PROPERTY="PARTTYPE" VALUE="ReactionSystem"/>
        </INFO>
        <PARAMETERS>
            <P> num_particles_total = 1 </P>

            <P> particle_output_freq = 1          </P>
            <!-- No particles when num_particles_total = 0-->
            <!-- Mass of each particle -->
            <!-- Scaling coefficient when adding particle drift velocities. -->
            <P> particle_v_drift_scaling = 1.0 </P>
            <!-- Scaling coefficient applied to B for particles, -->
            <!-- i.e. if 0 particles ignore B. -->
            <P> particle_B_scaling = 1.0 </P>
            <!-- Add to initial particle velocity a contribution: -->
            <!-- particle_velocity_B_scaling * unit(B) -->
            <P> particle_velocity_B_scaling = 0.0 </P>
            <!-- Add to initial particle velocity a contribution: -->
            <!-- using particle_thermal_velocity. -->
            <!-- Purtubation is sampled from N(0, particle_thermal_velocity) -->
            <P> particle_thermal_velocity = 10.0 </P>
        </PARAMETERS>

        <SPECIES>
            <S ID="0" NAME="Ar">
                <P> Mass = 1.0 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="100">
                    <E VAR="n" VALUE="sin(4*x)*sin(4*x)"/>
                </INITIAL>
                <SOURCE N="100">
                    <E VAR="n" VALUE="exp((-(x-2-0.75*cos(150*t))*(x-2-0.75*cos(150*t))/(0.01))+(-(y-0.75*sin(150*t))*(y-0.75*sin(150*t))/(0.01)))"/>
                </SOURCE>
                <SINK>
                    <E VAR="n" VALUE="exp((-(x-2-0.75*sin(150*t))*(x-2-0.75*sin(150*t))/(0.01))+(-(y+0.75*cos(150*t))*(y+0.75*cos(150*t))/(0.01)))"/>
                </SINK>
            </S>
            <S ID="1" NAME="Ne">
                <P> Mass = 1.0 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="100">
                    <E VAR="n" VALUE="cos(4*x)*cos(4*x)"/>
                </INITIAL>
                <SOURCE N="100">
                    <E VAR="n" VALUE="exp((-(x-2+0.75*cos(150*t))*(x-2+0.75*cos(150*t))/(0.01))+(-(y+0.75*sin(150*t))*(y+0.75*sin(150*t))/(0.01)))"/>
                </SOURCE>
                <SINK>
                    <E VAR="n" VALUE="exp((-(x-2+0.75*sin(150*t))*(x-2+0.75*sin(150*t))/(0.01))+(-(y-0.75*cos(150*t))*(y-0.75*cos(150*t))/(0.01)))"/>
                </SINK>
            </S>
        </SPECIES>

        <BOUNDARYINTERACTION>
            <REGION REF="1">
                <C SPECIES="0"  VALUE="0.0" />
                <!-- <C SPECIES="1"  VALUE="0.0" /> -->
            </REGION>
	        <REGION REF="2">
                <C SPECIES="0"  VALUE="0.0" />
                <!-- <C SPECIES="1"  VALUE="0.0" /> -->
            </REGION>
        </BOUNDARYINTERACTION>

        <REACTIONS>
            <R ID="0" TYPE="Ionisation" SPECIES="0">
                <P VAR="Rate" VALUE="1.0"/>
            </R>
            <R ID="1" TYPE="Ionisation" SPECIES="1">
                <P VAR="Rate" VALUE="1.0"/>
            </R>
            
            <!-- <R ID="2" TYPE="Recombination" SPECIES="0"> -->
                <!-- <P VAR="Rate" VALUE="1.0"/> -->
            <!-- </R> -->
            <!-- <R ID="3" TYPE="Recombination" SPECIES="1"> -->
                <!-- <P VAR="Rate" VALUE="1.0"/> -->
            <!-- </R> -->
            <!-- <R ID="4" TYPE="ChargeExchange" SPECIES="0,1"> -->
                <!-- <P VAR="Rate" VALUE="1.0"/> -->
            <!-- </R> -->
            
        </REACTIONS>

    </PARTICLES>
</NEKTAR>
