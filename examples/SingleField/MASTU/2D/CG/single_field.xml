<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="auto" />
    <EXPANSIONS>
        <E COMPOSITE="C[1]" NUMMODES="4" TYPE="MODIFIED" FIELDS="n" />
    </EXPANSIONS>

    <FORCING>
        <FORCE TYPE="Body">
            <BODYFORCE> BodyForce </BODYFORCE>
        </FORCE>
    </FORCING>

    <CONDITIONS>
        <SOLVERINFO>      
            <I PROPERTY="EQTYPE"                        VALUE="SingleDiffusiveField" />
            <I PROPERTY="PARTTYPE"                      VALUE="ReactionSystem"/>
            <I PROPERTY="Projection"                    VALUE="Continuous" />
            <I PROPERTY="TimeIntegrationMethod"         VALUE="IMEXOrder2" />
            <I PROPERTY="LinSysIterSolverTypeInNonlin"  VALUE="GMRES"/>
            <I PROPERTY="Preconditioner"                VALUE="Diagonal"/>
            <I PROPERTY="DiffusionAdvancement"          VALUE="Implicit"/>
        </SOLVERINFO>

        <PARAMETERS>
            <!-- Conversion of mesh unit to m -->
            <P> mesh_length = 1</P> 
            <!-- Normalised temperature in eV -->
            <P> Tnorm = 1</P>
            <!-- Normalised density in m^-3 -->
            <P> Nnorm = 1e18</P>
            <!-- Normalised magnetic field in T -->
            <P> Bnorm = 1.0</P>
            <!-- Time step in cyclotron units -->
            <P> TimeStep       = 50               </P>
            <P> NumSteps      = 1000              </P>
            <P> TFinal        = NumSteps*TimeStep </P>
            <P> IO_CheckSteps  = 1                </P>
            <P> IO_InfoSteps   = 1                </P>
            <P> epsilon        = 1.0               </P>

            <P> theta          = 2.0                </P>
            <P> T_bnd          = 1                  </P>
            <!-- <P> k_par          = 19.2 * sqrt(2.0 * PI^3.0) * (1.0/sqrt(m_e)) * (epsilon_0^2.0 / e^4.0) * (((k_B * T_e)^(5.0/2.0))/((Z^2.0) * lambda)) </P> -->
            <!-- <P> k_perp         = 1.0/(6.0*sqrt(PI^3.0))*1.0/m_i*(n*Z*e/(B*epsilon_0))^2.0*((m_p*A)^1.5*lambda)/sqrt(k_B*T_i) </P> -->

            <!-- Anisotropic diffusion -->
            <P> k_par           = 1  </P>
            <P> k_perp          = 0.000001   </P>
            <!-- Scaling factor for ICs -->
            <P> sx        = 0.3 </P>
            <P> sy        = 0.6 </P>
            <P> xc         = 0.93      </P>
            <P> yc         = 0.0      </P>
            <P> xs         = 0.0      </P>
            <P> ys         = 0        </P>


            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-3  </P>
            <P> NekNonlinSysMaxIterations = 10       </P>
            <P> NewtonRelativeIteTol      = 1.0E-4  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-4  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
            <!-- Particle system params -->
            <!-- Total number of particles - set = 0 to turn particles off -->
            <P> num_particles_total = 0 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 0.5 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 0.2 </P>
            <P> particle_output_freq = IO_CheckSteps              </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> n </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="1"> C[100] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <!--Wall -->
            <REGION REF="1">
                <N VAR="n" VALUE="0"/>
                <!-- <N VAR="n" USERDEFINEDTYPE="Oblique" VALUE="0"/> -->
            </REGION>
            
        </BOUNDARYCONDITIONS>
        
        <FUNCTION NAME="InitialConditions">
            <E VAR="n"  DOMAIN="0" VALUE="1+exp(-(x-xc-xs)*(x-xc-xs)/(sx*sx)-(y-yc-ys)*(y-yc-ys)/(sy*sy))" />
        </FUNCTION>


        <FUNCTION NAME="BodyForce">
            <E VAR="n" EVARS="n" VALUE="0.1*exp(-(x-xc-xs)*(x-xc-xs)/(sx*sx)-(y-yc-ys)*(y-yc-ys)/(sy*sy))" />
        </FUNCTION>
        
        <FUNCTION NAME="MagneticMeanField">
            <F VAR="Bx,By,Bz"  FILE="B.pts"  />
        </FUNCTION>

    </CONDITIONS>
    <NESO>
        <SPECIES>
            <I NAME="D">
                <P> Mass = 2.0 </P>
                <P> Charge = 1.0 </P>
                <FUNCTION NAME="InitialConditions">
                    <E VAR="n"  DOMAIN="0" VALUE="0.1+0.1*exp((-(x-rc-rs)*(x-rc-rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                </FUNCTION>
            </I>
            <I NAME="T">
                <P> Mass = 3.0 </P>
                <P> Charge = 1.0 </P>
                <FUNCTION NAME="InitialConditions">
                    <E VAR="n"  DOMAIN="0" VALUE="0.1+0.1*exp((-(x-rc+rs)*(x-rc+rs)/(sr*sr))+(-(y-yc-ys)*(y-yc-ys)/(sy*sy)))" />
                </FUNCTION>
            </I>
            <KN  NAME="D">
                <P> Mass = 2.0 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="1000">
                    <E VAR="n" VALUE="sin(4*x)*sin(4*x)"/>
                </INITIAL>
                <!-- <SOURCE N="100">
                    <E VAR="n" VALUE="exp((-(x-2-0.75*cos(150*t))*(x-2-0.75*cos(150*t))/(0.01))+(-(y-0.75*sin(150*t))*(y-0.75*sin(150*t))/(0.01)))"/>
                </SOURCE>
                <SINK>
                    <E VAR="n" VALUE="exp((-(x-2-0.75*sin(150*t))*(x-2-0.75*sin(150*t))/(0.01))+(-(y+0.75*cos(150*t))*(y+0.75*cos(150*t))/(0.01)))"/>
                </SINK> -->
 
            </KN>
            <KN NAME="T">
                <P> Mass = 3.0 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="1000">
                    <E VAR="n" VALUE="cos(4*x)*cos(4*x)"/>
                </INITIAL>
                <!-- <SOURCE N="100">
                    <E VAR="n" VALUE="exp((-(x-2+0.75*cos(150*t))*(x-2+0.75*cos(150*t))/(0.01))+(-(y+0.75*sin(150*t))*(y+0.75*sin(150*t))/(0.01)))"/>
                </SOURCE>
                <SINK>
                    <E VAR="n" VALUE="exp((-(x-2+0.75*sin(150*t))*(x-2+0.75*sin(150*t))/(0.01))+(-(y-0.75*cos(150*t))*(y-0.75*cos(150*t))/(0.01)))"/>
                </SINK> -->
            </KN>
        </SPECIES> 
        <VANTAGE>
            <S TYPE="Specular" SPECIES="D,T">
                <REGION REF="1"/>
                <RATE TYPE="Constant" VALUE="1.0"/>
            </S>   
            <R TYPE="Ionisation" SPECIES="D">
                <RATE TYPE="AMJUEL" VALUE="1.0"/>
                <CROSSSECTION TYPE="Constant" VALUE="1.0"/>
            </R>
            <R TYPE="Ionisation" SPECIES="T">
                <RATE TYPE="AMJUEL" VALUE="1.0"/>
                <CROSSSECTION TYPE="Constant" VALUE="1.0"/>
            </R>
            <R TYPE="Recombination" SPECIES="D">
                <RATE TYPE="AMJUEL" VALUE="1.0"/>
                <CROSSSECTION TYPE="Constant" VALUE="1.0"/>
            </R>
            <R TYPE="Recombination" SPECIES="T">
                <RATE TYPE="AMJUEL" VALUE="1.0"/>
                <CROSSSECTION TYPE="Constant" VALUE="1.0"/>
            </R>
            <R TYPE="ChargeExchange" SPECIES="D,T">
                <RATE TYPE="AMJUEL" VALUE="1.0"/>
                <CROSSSECTION TYPE="Constant" VALUE="1.0"/>
            </R>      
        </VANTAGE>    
    </NESO>
</NEKTAR>
