<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="auto" />
    <EXPANSIONS>
        <E COMPOSITE="C[1]" NUMMODES="4" TYPE="MODIFIED" FIELDS="n,p,T" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>      
            <I PROPERTY="EQTYPE"                        VALUE="DoubleDiffusiveField" />
            <I PROPERTY="Projection"                    VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod"         VALUE="DIRKOrder2" />
            <I PROPERTY="LinSysIterSolverTypeInNonlin"  VALUE="GMRES"/>
            <I PROPERTY="Preconditioner"                VALUE="Diagonal"/>
            <I PROPERTY="DiffusionAdvancement"          VALUE="Implicit"/>
        </SOLVERINFO>

        <PARAMETERS>
            <P> TimeStep       = 1e-3               </P>
            <P> FinalTime      = 10             </P>
            <P> NumSteps       = FinalTime/TimeStep</P>
            <P> IO_CheckSteps  = 10                </P>
            <P> IO_InfoSteps   = 10                </P>
            <P> epsilon        = 1.0               </P>

            <P> m_e            = 9.1096e-31         </P>
            <P> m_p            = 1.6726e-27         </P>
            <P> A              = 1.0                </P>
            <P> Z              = 1.0                </P>
            <P> m_i            = A*m_p              </P>
            <P> epsilon_0      = 8.8542e-12         </P>
            <P> e              = 1.6022e-19         </P>
            <P> k_B            = 1.3807e-23         </P>
            <P> theta          = 2.0                </P>
            <P> gamma          = 7                  </P>
            <!-- <P> k_par          = 19.2 * sqrt(2.0 * PI^3.0) * (1.0/sqrt(m_e)) * (epsilon_0^2.0 / e^4.0) * (((k_B * T_e)^(5.0/2.0))/((Z^2.0) * lambda)) </P> -->
            <!-- <P> k_perp         = 1.0/(6.0*sqrt(PI^3.0))*1.0/m_i*(n*Z*e/(B*epsilon_0))^2.0*((m_p*A)^1.5*lambda)/sqrt(k_B*T_i) </P> -->

            <!-- Anisotropic diffusion -->
            <P> k_par           = 1   </P>
            <P> k_perp          = 0.000001   </P>
            <P> kappa_par           = 1   </P>
            <P> kappa_perp          = 0.000001   </P>
            <!-- Scaling factor for ICs -->
            <P> s        = 0.1 </P>
            <P> xc         = 0.8      </P>
            <P> yc         = 0.0      </P>
            <P> xs         = 0.4      </P>
            <P> ys         = 0        </P>


            <!-- Implicit solve params -->
            <P> IterativeSolverTolerance  = 1.0E-3  </P>
            <P> NekNonlinSysMaxIterations = 10       </P>
            <P> NewtonRelativeIteTol      = 1.0E-4  </P>
            <P> NonlinIterTolRelativeL2   = 1.0E-4  </P>
            <P> LinSysRelativeTolInNonlin = 1.0E-02  </P>
            <!-- Particle system params -->
            <!-- Total number of particles - set = 0 to turn particles off -->
            <P> num_particles_total = 0 </P>
            <!-- Mass of each particle -->
            <P> particle_mass = 0.5 </P>
            <!-- Charge of each particle -->
            <P> particle_charge = 0.2 </P>
            <P> particle_output_freq = 1              </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> n </V>
            <V ID="1"> p </V>
            <V ID="2"> T </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="1"> C[100] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <!--Wall -->
            <REGION REF="1">
                <D VAR="n" VALUE="1"/>
                <D VAR="p" VALUE="1"/>
                <D VAR="T" VALUE="1"/>
            </REGION>
            
        </BOUNDARYCONDITIONS>
        
        <FUNCTION NAME="InitialConditions">
            <E VAR="n"  DOMAIN="0" VALUE="1+exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(s*s))" />
            <E VAR="p"  DOMAIN="0" VALUE="(1+exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(s*s)))*(1+exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(s*s)))" />
            <E VAR="T"  DOMAIN="0" VALUE="1+exp((-(x-xc-xs)*(x-xc-xs)-(y-yc-ys)*(y-yc-ys))/(s*s))" />
        </FUNCTION>
        
        <FUNCTION NAME="MagneticMeanField">
            <F VAR="Bx,By,Bz"  FILE="B.pts"  />
        </FUNCTION>

    </CONDITIONS>
</NEKTAR>
